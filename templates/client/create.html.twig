{% extends "layouts/base.html.twig" %}

{% block title %}Create Client - ThinkHuge App{% endblock %}

{% block body %}
    <h1 class="mb-4">Create Client</h1>
    <form method="POST" action="/clients">
        {{ csrf_field() }}
        <div class="mb-3">
            <label for="name" class="form-label">Name</label>
            <input type="text" class="form-control {{ errors.name ? 'is-invalid' : '' }}" id="name" name="name" required value="{{ old.name }}">
            {% if errors.name %}
                <div class="invalid-feedback">{{ errors.name[0] }}</div>
            {% endif %}
        </div>
        <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input type="email" class="form-control {{ errors.email ? 'is-invalid' : '' }}" id="email" name="email" required value="{{ old.email }}">
            {% if errors.email %}
                <div class="invalid-feedback">{{ errors.email[0] }}</div>
            {% endif %}
        </div>
        <div class="mb-3">
            <label for="balance" class="form-label">Initial Balance</label>
            <input type="number" step="0.01" class="form-control {{ errors.balance ? 'is-invalid' : '' }}" id="balance" name="balance" value="{{ old.balance|default('0') }}">
             {% if errors.balance %}
                <div class="invalid-feedback">{{ errors.balance[0] }}</div>
            {% endif %}
        </div>
        <button type="submit" class="btn btn-primary">Create</button>
        <a href="/" class="btn btn-secondary ms-2">Cancel</a>
    </form>
{% endblock %}
