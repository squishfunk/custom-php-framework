{% extends "layouts/base.html.twig" %}

{% block title %}Clients - ThinkHuge App{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Clients</h1>
        <a href="/clients/create" class="btn btn-primary">Create New Client</a>
    </div>

    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Email</th>
                <th>Balance</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for client in clients %}
            <tr>
                <td>{{ client.id }}</td>
                <td><a href="/clients/{{ client.id }}">{{ client.name }}</a></td>
                <td>{{ client.email }}</td>
                <td>{{ client.balance }}</td>
                <td>
                    <form method="POST" action="/clients/{{ client.id }}/delete" onsubmit="return confirm('Are you sure?');" class="d-inline">
                         <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </td>
            </tr>
            {% else %}
            <tr>
                <td colspan="5" class="text-center">No clients found.</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
