{% extends "layouts/base.html.twig" %}

{% block title %}Login - ThinkHuge App{% endblock %}

{% block body %}
    <div class="row justify-content-center">
        <div class="col-md-4">
            <h1 class="mb-4">Login</h1>
            <form method="POST" action="/login">
                <div class="mb-3">
                    <label for="email" class="form-label">Email address</label>
                    <input type="email" class="form-control {{ errors.email ? 'is-invalid' : '' }}" id="email" name="email" required value="{{ old.email }}">
                    {% if errors.email %}
                        <div class="invalid-feedback">{{ errors.email[0] }}</div>
                    {% endif %}
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" class="form-control {{ errors.password ? 'is-invalid' : '' }}" id="password" name="password" required>
                    {% if errors.password %}
                        <div class="invalid-feedback">{{ errors.password[0] }}</div>
                    {% endif %}
                </div>
                <button type="submit" class="btn btn-primary w-100">Login</button>
            </form>
            <div class="mt-3 text-center">
                <a href="/register">No account? Register</a>
            </div>
        </div>
    </div>
{% endblock %}
