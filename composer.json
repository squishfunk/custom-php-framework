{
    "name": "myapp/mvc-skeleton",
    "description": "A lightweight PHP MVC skeleton project",
    "type": "project",
    "require": {
        "php": ">=8.2",
        "twig/twig": "^3.0",
        "vlucas/phpdotenv": "^5.6"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^13.0",
        "filp/whoops": "^2.18"
    }
}
